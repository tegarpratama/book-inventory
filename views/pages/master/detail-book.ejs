<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
   <h1 class="h2"><%= pageTitle %></h1>
</div>

<table class="table table-bordered table-hover">
   <tr>
      <th style="width:  17%">Title</th>
      <td><%= book.title %> </td>
   </tr>
   <tr>
      <th>Author</th>
      <td><%= book.author %></td>
   </tr>
   <tr>
      <th>Publisher</th>
      <td><%= book.publisher %></td>
   </tr>
   <tr>
      <th>Total Pages</th>
      <td><%= book.totalPages %></td>
   </tr>
   <tr>
      <th>Price</th>
      <td><%= book.price %></td>
   </tr>
   <tr>
      <th>Stok</th>
      <td><%= book.stock %></td>
   </tr>
   <tr>
      <th>Description</th>
      <td><%= book.description %> </td>
   </tr>
   <tr>
      <th>Cover</th>
      <td>Coming soon</td>
   </tr>
</table>

<a href="/master/books" class="btn btn-secondary btn-sm float-right"><i class="fas fa-chevron-circle-left mr-2"></i>Back</a>